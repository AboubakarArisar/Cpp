#include<iostream>
using namespace std;
int main()
{
int array_1[4]={22,45,12,3};
int array_2[4]={12,13,4,45};
int array_3[4];
for(int i=0; i<4; i++)
{
	array_3[i]=array_1[i]+array_2[i];
}
cout<<"\nValues in the first array are below : "<<endl;
for(int a=0; a<4; a++)
{
	cout<<array_1[a]<<" ";
}

cout<<"\nValues in the Second array are below : "<<endl;
for(int b=0; b<4; b++)
{
	cout<<array_2[b]<<" ";
}

cout<<"\nValues in the third array are below : "<<endl;
for(int c=0; c<4; c++)
{
	cout<<array_3[c]<<" ";
}
return 0;
}
