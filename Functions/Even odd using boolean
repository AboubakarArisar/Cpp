#include <iostream>
using namespace std;
bool res(int);
int main()
{
int num;
bool a;
cout<<"Enter number to check whether the number is even or not-->";
cin>>num;
a=res(num);
if(a==true)
{
	cout<<"The number is Even";
}
else
{
	cout<<"The number is NOT Even";
}

return 0;
}
bool res(int a)
{
	if(a%2==0)
	{
		return true;
	}
	else 
	{
		return false;
	}
}
