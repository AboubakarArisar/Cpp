#include <iostream>
using namespace std;
int main()
{
int n,Q1=0,Q2=0,Q3=0;
n=6;
while (n!=0)
{

cout<<"1. Books (Per item price= 500)"<<endl;
cout<<"2. T-Shirt (per item price= 700)"<<endl;
cout<<"3. Shoes(per pair price= 1000)"<<endl;
cout<<"0. Exit the program"<<endl;
cout<<"Enter any number to select any product to buy or 0 to exit: ";
cin>>n;

if (n==1) 
{
cout<<"You have selected Books. "<<"Enter Quantity: ";
cin>>Q1;
    
}
else if (n==2)
{
cout<<"You have selected T-Shirts. "<<"Enter Quantity: ";
cin>>Q2;


}

else if (n==3)
{
cout<<"You have selected Shoes. "<<"Enter Quantity: ";
cin>>Q3;


}
else if (n==0)
{
cout<<"_____Thank you.____"<<endl;
}
else
{
cout<<"Invaild Number!"<<endl;
}


}
cout<<"You have Purchased "<<Q1<<" Books. (Price="<<(500*Q1)<<")"<<endl;
cout<<"You have Purchased "<<Q2<<" T-Shirts. (Price="<<(700*Q2)<<")"<<endl;
cout<<"You have Purchased "<<Q3<<" Shoes. (Price="<<(1000*Q3)<<")"<<endl;
cout<<"Total : "<<(500*Q1)+(700*Q2)+(1000*Q3);
return 0;
}
